{
  "name": "drive-backend",
  "author": "Deramecourt Mathurin",
  "version": "1.0.0",
  "description": "Drive Backend",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "build": "rm -r dist/; tsc",
    "dev": "nodemon .",
    "start": "node .",
    "test": "npm run testOnce -- -w",
    "testOnce": "mocha dist/**/*.test.js",
    "coverage": "nyc --all npm run testOnce",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "docker:build": "sudo docker build -t mderam/drive-backend .",
    "docker:push": "sudo docker push mderam/drive-backend",
    "docker:build-push": "npm run docker:build && npm run docker:push"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "archiver": "^7.0.1",
    "argon2": "^0.40.3",
    "class-validator": "^0.14.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.18.0",
    "form-data": "^4.0.0",
    "graphql": "^16.8.2",
    "graphql-upload": "^16.0.2",
    "ioredis": "^5.4.1",
    "mailgun.js": "^10.2.1",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "sharp": "^0.33.4",
    "stripe": "^15.12.0",
    "type-graphql": "2.0.0-rc.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/chai": "^4.3.16",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/graphql-upload": "^16.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.5",
    "@types/nodemailer": "^6.4.15",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.12.0",
    "chai": "^5.1.1",
    "mocha": "^10.4.0",
    "nodemailer": "^6.9.13",
    "nyc": "^17.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
