{
  "name": "drive-backend",
  "author": "Deramecourt Mathurin",
  "version": "1.0.0",
  "description": "Drive Backend",
  "main": "dist/index.js",
  "scripts": {
    "watch": "tsc -w",
    "build": "rm -r dist/; tsc",
    "dev": "nodemon .",
    "start": "node .",
    "test": "npm run testOnce -- -w",
    "testOnce": "mocha dist/**/*.test.js",
    "coverage": "nyc --all npm run testOnce",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "docker:build": "sudo docker build -t mderam/drive-backend .",
    "docker:push": "sudo docker push mderam/drive-backend",
    "docker:build-push": "npm run docker:build && npm run docker:push"
  },
  "dependencies": {
    "apollo-server-core": "^3.8.1",
    "apollo-server-express": "^3.8.1",
    "archiver": "^5.3.1",
    "argon2": "^0.28.5",
    "class-validator": "^0.13.2",
    "connect-redis": "^6.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "express-session": "^1.17.2",
    "form-data": "^4.0.0",
    "graphql": "^15.8.0",
    "graphql-upload": "^13.0.0",
    "ioredis": "4",
    "mailgun.js": "^7.0.2",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.30.4",
    "stripe": "^9.1.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.41",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/chai": "^4.3.1",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql-upload": "^8.0.11",
    "@types/ioredis": "4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.17",
    "@types/nodemailer": "^6.4.4",
    "@types/sharp": "^0.30.2",
    "@types/uuid": "^8.3.4",
    "@types/validator": "^13.7.2",
    "chai": "^4.3.6",
    "mocha": "^10.0.0",
    "nodemailer": "^6.7.5",
    "nyc": "^15.1.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
